rules_version = '2';
service firebase.storage {
  function onlyIdentityUser(uid) {
    return request.auth.uid == uid;
  }

  match /b/{bucket}/o {
    // v1beta1 の出品ファイルはここに置かれる
    match /Users/{uid}/{allPaths=**} {
      allow write: if onlyIdentityUser(uid);
    }
    // v1 の出品ファイルはここに置かれる
    match /Listings/{version}/Users/{uid}/{allPaths=**} {
      allow write: if onlyIdentityUser(uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}